{
  "name": "pickup-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "픽업 서비스 모노레포 - NestJS + Next.js + Prisma",
  "author": "DOCORE",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@pickup/api",
    "dev:admin": "turbo run dev --filter=@pickup/admin",
    "dev:storefront": "turbo run dev --filter=@pickup/storefront",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:admin": "playwright test tests/e2e/admin-flow.spec.ts",
    "test:e2e:storefront": "playwright test tests/e2e/storefront-flow.spec.ts",
    "test:e2e:dual-write": "playwright test tests/e2e/dual-write.spec.ts",
    "clean": "turbo run clean",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "db:status": "tsx scripts/db-status.ts",
    "backfill:json-to-postgres": "tsx scripts/backfill-json-to-postgres.ts",
    "validate:migration": "tsx scripts/validate-migration.ts",
    "switch:db": "tsx scripts/switch-database.ts",
    "check:404": "tsx scripts/check-404.ts",
    "setup:dev": "tsx scripts/setup-dev.ts",
    "migrate:data": "tsx scripts/migrate-data.ts",
    "backfill:data": "tsx scripts/backfill-data.ts",
    "logs:api": "tail -f apps/api/logs/app.log",
    "deploy:railway": "railway up",
    "deploy:status": "railway status",
    "deploy:logs": "railway logs"
  },
  "devDependencies": {
    "@turbo/gen": "^1.10.12",
    "turbo": "^1.10.12",
    "typescript": "^5.2.2",
    "tsx": "^4.6.0",
    "@types/node": "^20.8.0",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "npm@10.2.0"
}